    <%= f.label :horse_power %><br />
    <%= f.number_field :horse_power %>
  </div>
  <div class="field">
    <%= f.label :doors %><br />
    <%= f.number_field :doors %>
  </div>
  <div class="field">
    <%= f.label :air_bags %><br />
    <%= f.check_box :air_bags %>
  </div>
  <div class="field">
    <%= f.label :abs %><br />
    <%= f.check_box :abs %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>
  <div class="actions">
    <%= f.submit %>
